@model Models.Produit.ProduitDetailVM

<div class="container">
    
        <h2 class="text-center">
            Produit Detail
        </h2>
        
   
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            
                <tr>
                    <th>ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Produit Nom</th>
                    <td>@Model.Nom</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="~/images/@Model.Image" /></td>
                </tr>
                <tr>
                    <th>quantite dans stock</th>
                    <td>@Model.Quantite</td>
                </tr>

                <tr>
                    <th>prix stock</th>
                    <td>@Model.Price</td>
                </tr>
            </table>
        </div>
    </div>
