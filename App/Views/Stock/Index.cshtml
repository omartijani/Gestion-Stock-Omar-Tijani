@model List<Models.Stock.StockListVM>


<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>IdProduit</th>
                    <th>Name</th>
                    <th>Prix</th>
                    <th>Quantite</th>

                    <th>Go Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produit in Model)
                {
                    <tr>
                        <td>@produit.Id</td>

                        <td>
                            <img src="./images/@produit.Img" />
                        </td>
                        <td>@produit.IdProduit</td>
                        <td>@produit.Name</td>
                        <td>@produit.Prix</td>
                        <td>@produit.Quantite</td>



                        <td>
                            <a class="btn btn-primary" asp-controller="Stock" asp-action="Detail" asp-route-id="@produit.Id"><i class="bi bi-eye-fill"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>