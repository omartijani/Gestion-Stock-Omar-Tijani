@model Models.Stock.StockDetailVM;


<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>IdProduit</th>
                    <th>Name</th>
                    <th>Prix</th>
                    <th>Quantite</th>

                    <th>IdEntrees</th>
                    <th>IdSortie</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.Id</td>

                    <td>
                        <img src="~/images/@Model.Img" />
                    </td>
                    <td>@Model.IdProduit</td>
                    <td>@Model.Name</td>
                    <td>@Model.Prix</td>
                    <td>@Model.Quantite</td>



                    <td>
                        <ul class="list-unstyled">
                            @foreach (var idEntree in Model.IdEntrees)
                            {
                                <li class="mb-3">
                                    @idEntree
                                    <a class="btn btn-primary" asp-controller="Entree" asp-action="Detail" asp-route-id="@idEntree"><i class="bi bi-eye-fill"></i></a>
                                </li>
                            }
                        </ul>

                    </td>





                    <td>
                        <ul class="list-unstyled">
                            @foreach (var idSortie in Model.IdSorties)
                            {
                                <li class="mb-3">
                                    @idSortie
                                    <a class="btn btn-primary  " asp-controller="Sortie" asp-action="Detail" asp-route-id="@idSortie"><i class="bi bi-eye-fill"></i></a>
                                </li>

                            }
                        </ul>

                    </td>


                </tr>
            </tbody>
        </table>
    </div>
</div>
