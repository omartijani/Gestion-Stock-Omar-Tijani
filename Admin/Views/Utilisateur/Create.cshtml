@model Models.Utilisateur.UtilisateurCreateVM

@{
    ViewData["Title"] = "Create Utilisateur";
}

<div class="container">
    <h2 class="text-center">Create Utilisateur</h2>
    <form asp-action="Create" method="post">

        <div class="form-group">
            <label for="Nom">Nom </label>
            <input type="text" class="form-control" asp-for="Nom" />
        </div>

        <div class="form-group">
            <label for="Prenom">Prenom </label>
            <input type="text" class="form-control" asp-for="Prenom" />
        </div>

        <div class="form-group">
            <label for="Adress">Adress </label>
            <input type="text" class="form-control" asp-for="Adress" />
        </div>

        <div class="form-group">
            <label for="Telephone">Telephone </label>
            <input type="tel" class="form-control" asp-for="Telephone" />
        </div>

        <div class="form-group">
            <label for="Password">Password </label>
            <input type="password" class="form-control" asp-for="Password" />
        </div>

        <div class="form-group">
            <label for="Email">Email </label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="Admin" asp-for="Admin">
                <label class="form-check-label" for="Admin">Admin</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Create Utilisateur</button>
    </form>
</div>
