@model Models.Produit.ProduitCreateVM

@{
    ViewData["Title"] = "Create Produit";
}

<div class="container">
    <h2 class="text-center">Create Produit</h2>
    <form asp-action="Create" method="post">
       
        <div class="form-group">
            <label for="Nom">Nom Produit </label>
            <input type="text" class="form-control" asp-for="Nom" />
        </div>
        <div class="form-group">
            <label for="Image">Image </label>
            <input type="text" placeholder="entrez le nom d'image avec l'extention" class="form-control" asp-for="Image" />
        </div>
        
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>